{
  "name": "react-html-map",
  "version": "0.1.1",
  "description": "Declarative, composable and secure HTML rendering for React",
  "license": "MIT",
  "author": "Jari Zwarts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meesvandongen/react-html-map.git"
  },
  "homepage": "https://github.com/meesvandongen/react-html-map#readme",
  "bugs": {
    "url": "https://github.com/meesvandongen/react-html-map/issues"
  },
  "keywords": [
    "react",
    "html",
    "parser",
    "mapping",
    "secure",
    "xss",
    "typescript"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsup --watch",
    "build": "tsup",
    "test": "jest",
    "prepare": "npm run build",
    "typecheck": "tsc --project . --noEmit",
    "publint": "publint"
  },
  "peerDependencies": {
    "react": ">=16"
  },

  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "prettier": "^3.0.0",
    "publint": "^0.3.12",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "size-limit": "^8.0.0",
    "ts-jest": "^29.0.0",
    "tslib": "^2.0.3",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "endOfLine": "lf"
  },
  "dependencies": {
    "domhandler": "^5.0.3",
    "htmlparser2": "^10.0.0"
  }
}
