{
  "name": "react-html-map",
  "version": "0.1.1",
  "description": "Declarative, composable and secure HTML rendering for React",
  "license": "MIT",
  "author": "Jari Zwarts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meesvandongen/react-html-map.git"
  },
  "homepage": "https://github.com/meesvandongen/react-html-map#readme",
  "bugs": {
    "url": "https://github.com/meesvandongen/react-html-map/issues"
  },
  "keywords": [
    "react",
    "html",
    "parser",
    "mapping",
    "secure",
    "xss",
    "typescript"
  ],
  "main": "dist/index.js",
  "module": "dist/react-html-map.esm.js",
  "typings": "dist/index.d.ts",
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-html-map.esm.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "typecheck": "tsc --project . --noEmit",
    "publint": "publint"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "size-limit": [
    {
      "path": "dist/react-html-map.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-html-map.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.7.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/react-test-renderer": "^18.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.3",
    "oberon-prettier-config": "^1.0.0",
    "prettier": "^2.2.1",
    "publint": "^0.3.12",
    "react": "^18.0.0",
    "react-test-renderer": "^18.0.0",
    "size-limit": "^4.7.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "prettier --write",
      "npm run test --if-present -- --findRelatedTests",
      "npm run lint --"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run typecheck && lint-staged"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "endOfLine": "lf"
  },
  "dependencies": {
    "domhandler": "^5.0.3",
    "htmlparser2": "^10.0.0"
  }
}
