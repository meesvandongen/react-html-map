{
	"name": "react-html-map",
	"version": "0.2.0",
	"description": "Declarative, composable and secure HTML rendering for React",
	"license": "MIT",
	"author": {
		"name": "Jari Zwarts",
		"email": "jari@oberon.nl",
		"url": "https://github.com/oberonamsterdam"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oberonamsterdam/react-html-map.git"
	},
	"homepage": "https://github.com/oberonamsterdam/react-html-map#readme",
	"bugs": {
		"url": "https://github.com/oberonamsterdam/react-html-map/issues"
	},
	"keywords": [
		"react",
		"html",
		"parser",
		"mapping",
		"secure",
		"xss",
		"typescript"
	],
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"typings": "dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"start": "tsdown --watch",
		"build": "tsdown",
		"test": "vitest",
		"test:run": "vitest run",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"prepare": "npm run build",
		"typecheck": "tsc --project . --noEmit",
		"publint": "publint"
	},
	"peerDependencies": {
		"react": ">=16"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^24.2.0",
		"@types/react": "^19.1.9",
		"@types/react-dom": "^19.1.7",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"jsdom": "^26.1.0",
		"prettier": "^3.6.2",
		"publint": "^0.3.12",
		"react": ">=19",
		"react-dom": "^19.1.1",
		"tsdown": "^0.13.4",
		"tslib": "^2.8.1",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"domhandler": "^5.0.3",
		"htmlparser2": "^10.0.0"
	}
}
